{
  "name": "mfu-activity-board",
  "version": "2.1.0",
  "description": "MFU Activity Board - Mae Fah Luang University Activity Management Platform",
  "main": "index.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "npm run copy && live-server public --port=3000 --host=localhost --open=/index.html",
    "dev:backend": "nodemon server/index.js",
    "copy": "node scripts/copy-files.js",
    "build": "npm run copy",
    "clean": "node -e \"require('fs-extra').removeSync('public/src')\"",
    "server": "node server/index.js"
  },
  "keywords": [
    "activity",
    "board",
    "university",
    "mfu",
    "supabase",
    "postgresql",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "fs-extra": "^11.2.0",
    "live-server": "^1.2.2",
    "nodemon": "^3.1.4"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1"
  }
}
